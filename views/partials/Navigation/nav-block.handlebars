<div class="navbar-container">
  <nav class="navbar navbar-expand-md navbar-light bg-white">
    <a class="navbar-brand" href="/">
      <img id="go-home" border="0" src="/images/Good_Cuisine_logo.png" alt="Good-Cuisine">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        {{#if isLoggedIn}}
        <li class="nav-item">
          <span class="navbar-text" id="userId" data-userid={{id}}>Hi, {{name}} </span>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/search" data-search={{search}}>Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/accounts/view" data-account={{account}}>Account</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
        {{else}}
        <li class="nav-item">
          <a class="nav-link" href="/search" data-view={{view}}>Search Recipes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" id="sign-in-modal">Sign In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link sign-up-btn" href="/signup" data-signup={{signup}}>Sign Up</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</div>

{{> Modal/signin-block}}