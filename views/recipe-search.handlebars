{{> Navigation/nav-block search=false view=false account=false signup=true}}

<div class="recipe-search-block" id="members-search-block">
   <div class="welcome">
      <h1>Your Dashboard</h1>
   </div>

   <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
         <a class="nav-link active" id="searchTab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
            aria-selected="true">Search</a>
      </li>
      <li class="nav-item">
         <a class="nav-link" id="savedTab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
            aria-selected="false">Saved Recipes</a>
      </li>
   </ul>
   <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="searchTab">
         <div class="accordion" id="accordionExample">
            <div class="card" id="searchCard">
               <div class="card-header px-5 pb-0" id="headingOne">
                  <div class="row">
                     <div class="col-12">
                        <p>
                           Select key word for search
                           <!-- {{!-- Client side js will append diet options to dietCheckbox class --}} -->
                           <div class="keyRadio">
                           </div>
                        </p>
                     </div>
                  </div>
                  <h2 class="mb-0">
                     <button class="btn filter-btn" type="button" data-toggle="collapse" data-target="#collapseOne"
                        aria-expanded="true" aria-controls="collapseOne">
                        Filters<i class="fas fa-sliders-h ml-2"></i>
                     </button>
                  </h2>

               </div>
               <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                  <div class="card-body">

                     {{!-- Filters in collapsed container --}}
                     <div class="container search-filters">
                        <div class="row">
                           <div class="col-12">
                              <p>
                                 Select dietary preferences from the given options:
                                 <!-- {{!-- Client side js will append diet options to dietCheckbox class --}} -->
                                 <div class="dietCheckbox">
                                 </div>
                              </p>
                           </div>
                        </div>
                        <div class="row">
                           <div class="col-12">
                              <p>
                                 Health Options:<br>(choose up to two for best results)
                                 <!-- {{!-- Client side js will append diet options to cuisineCheck class --}} -->
                                 <div class="custom-control custom-checkbox healthCheck"></div>
                              </p>
                           </div>
                        </div>
                        <div class="row">
                           <div class="col-12">
                              <p>
                                 Select key word for search
                                 <!-- {{!-- Client side js will append diet options to dietCheckbox class --}} -->
                                 <div class="calorieRadio">
                                 </div>
                              </p>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="search-button-container mx-5 pt-3">
                  <button type="button" class="btn btn-primary search-btn" id="search">Search for Recipes<i class="fas fa-search ml-2"></i></button>
               </div>
            </div>
            <div class="card d-sm-flex flex-sm-row flex-sm-wrap" id="recipeResults">
               <h3 class="results-message m-5">Results will appear here.</h3>
            </div>
         </div>
      </div>
      <div class="tab-pane fade saved-recipes" id="profile" role="tabpanel" aria-labelledby="savedTab">
         <div class="d-sm-flex flex-sm-row flex-sm-wrap py-5" id="savedRecipes">
            <h3 class="results-message mx-5" id="savedRecipesMessage">Nothing saved yet.</h3>
         </div>
      </div>
   </div>
</div>




