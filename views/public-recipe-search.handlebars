{{> Navigation/nav-block search=false view=false account=true signup=false}}

<div class="recipe-search-block" id="non-members-search-block">
   <div class="welcome">
      <h1>Recipe Search</h1>
   </div>

   <div id="userId" data-userid="none"></div>

   <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
         <a class="nav-link active" id="searchTab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
            aria-selected="true">Search</a>
      </li>
      <li class="nav-item">
         <a class="nav-link" id="savedTab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
            aria-selected="false">Saved Recipes</a>
      </li>
   </ul>
   <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="searchTab">
         <div class="accordion" id="accordionExample">
            <div class="card" id="searchCard">
               <div class="card-header p-5" id="headingOne">
                  <div class="row">
                     <div class="col-12">
                        <p>
                           Select key word for search
                           <!-- {{!-- Client side js will append diet options to dietCheckbox class --}} -->
                           <div class="keyRadio">
                           </div>
                        </p>
                     </div>
                  </div>
                  <h2 class="mb-0">
                     <button class="btn" type="button" data-toggle="collapse" data-target="#collapseOne"
                        aria-expanded="true" aria-controls="collapseOne">
                        Filters
                     </button>
                  </h2>
               </div>
               <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                  <div class="card-body">


                     {{!-- Filters in collapsed container --}}
                     <div class="container search-filters">
                        <div class="row">
                           <div class="col-12">
                              <p>
                                 Select dietary preferences from the given options:
                                 <!-- {{!-- Client side js will append diet options to dietCheckbox class --}} -->
                                 <div class="dietCheckbox">
                                 </div>
                              </p>
                           </div>
                        </div>
                        <div class="row">
                           <div class="col-12">
                              <p>
                                 Health Options<br>(for best results don't select more than 3):
                                 <!-- {{!-- Client side js will append diet options to cuisineCheck class --}} -->
                                 <div class="custom-control custom-checkbox healthCheck"></div>
                              </p>
                           </div>
                        </div>
                        <div class="row">
                           <div class="col-12">
                              <p>
                                 Select key word for search
                                 <!-- {{!-- Client side js will append diet options to dietCheckbox class --}} -->
                                 <div class="calorieRadio">
                                 </div>
                              </p>
                           </div>
                        </div>
                        <button type="button" class="btn btn-primary" id="search">Search for Recipes</button>
                     </div>
                  </div>
               </div>
            </div>
            <div class="card d-sm-flex flex-sm-row flex-sm-wrap" id="recipeResults">
               <h3 class="results-message m-5">Results will appear here.</h3>
            </div>
         </div>
      </div>
      <div class="tab-pane fade saved-recipes p-5" id="profile" role="tabpanel" aria-labelledby="savedTab">
         <h3>Sign up now to save recipes.</h3>
         <a class="nav-link sign-up-btn" href="/signup" data-signup={{signup}}>Sign Up</a>
      </div>
   </div>
</div>


{{> Modal/signin-block}}
{{> Modal/recipeerror-block}}
{{> Modal/keyError-block}}
{{> Modal/saveRecipeError-block}}

<script src="/js/public.js"></script>